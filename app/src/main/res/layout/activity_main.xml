<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hpk.pr131.hpk_beta.Activity.MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/aplName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apl_name" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/aplName"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Новини"
                android:theme="@style/MyButton"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Галерея"
                android:theme="@style/MyButton"
                android:onClick="menuListener"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnReplaced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Заміни"
                android:theme="@style/MyButton"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnTimetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Розклад"
                android:theme="@style/MyButton"
                android:onClick="menuListener"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Історія"
                android:theme="@style/MyButton"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnLeadership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Керівництво"
                android:theme="@style/MyButton"
                android:onClick="menuListener"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
