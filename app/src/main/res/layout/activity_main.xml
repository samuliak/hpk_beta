<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hpk.pr131.hpk_beta.Activity.MainActivity"
    android:background="@drawable/menu_back">

    <ImageView
        android:id="@+id/aplName"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:background="@drawable/menu_img" />
    <LinearLayout
        android:id="@+id/linearBelowImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aplName"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news"
                android:layout_marginTop="15dp"
                android:textColor="@color/text_light"
                android:background="@drawable/btn_style"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/map"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_light"
                android:background="@drawable/btn_style"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_light"
                android:background="@drawable/btn_style"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contacts"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_light"
                android:background="@drawable/btn_style"
                android:onClick="menuListener"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnReplaced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/replace"
                android:layout_marginTop="15dp"
                android:textColor="@color/text_light"
                android:background="@drawable/btn_style"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnTimetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timetable"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_light"
                android:background="@drawable/btn_style"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnLeadership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/headCollege"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_light"
                android:background="@drawable/btn_style"
                android:onClick="menuListener"/>
            <Button
                android:id="@+id/btnApplicants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/applicants"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_light"
                android:background="@drawable/btn_style"
                android:onClick="menuListener"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
